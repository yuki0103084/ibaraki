<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
    <p><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
       <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
    </p>   
  </div>  
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
    <h2>編集</h2>
    <%= form_for @user do |f| %>
    <div class="form-group">
      <label>ユーザー名</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>自己紹介</label>
      <%= f.text_area :profile, class: "form-control" %>
    </div>
    <div class="form-group">
    <label>プロフィール写真</label><br/>   
    <%= f.attachment_field :profile_image %>
  </div>
    <div>
      <%= f.submit class: "btn btn-success" %>
    </div>  
    <% end %>
    </div>
  </div>
</div>